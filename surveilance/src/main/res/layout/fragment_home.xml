<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header / Top Banner -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/primary_blue_40"
        android:padding="16dp">

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratbold"
            android:text="Good Afternoon"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Username Text -->
        <TextView
            android:id="@+id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/greetingText"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserratregular"
            android:text="John Doe"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Notification Icon with Badge -->
        <FrameLayout
            android:id="@+id/notificationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp">

            <!-- Notification Bell Icon -->
            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_notifications_24"
                app:tint="@android:color/white" />

            <!-- Red Dot Badge -->
            <View
                android:id="@+id/badge"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@android:color/holo_red_light"
                android:backgroundTint="@android:color/holo_red_light"
                android:shape="oval" />
        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_search"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/search_patient_cardview_horizontal_margin"
            android:layout_marginVertical="@dimen/search_patient_cardview_vertical_margin"
            android:layout_marginTop="@dimen/search_patient_cardview_margin_top"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/primary_blue_40"
            app:cardCornerRadius="@dimen/cardView_radius_corner">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_height"
                    android:contentDescription="Task Image"
                    android:scaleType="centerInside"
                    android:src="@drawable/virus"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/new_patient_horizontal_margin"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="Notifiable Diseases"
                    android:textAppearance="?textAppearanceTitleLarge"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dashboard_text_fontSize" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_sync"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/search_patient_cardview_horizontal_margin"
            android:layout_marginVertical="@dimen/search_patient_cardview_vertical_margin"
            android:layout_marginTop="@dimen/search_patient_cardview_margin_top"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/primary_blue_40"
            app:cardCornerRadius="@dimen/cardView_radius_corner">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_height"
                    android:contentDescription="Task Image"
                    android:scaleType="centerInside"
                    android:src="@drawable/syringe"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/new_patient_horizontal_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Mass Immunization"
                    android:textAppearance="?textAppearanceTitleLarge"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dashboard_text_fontSize" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_periodic_sync"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/search_patient_cardview_horizontal_margin"
            android:layout_marginVertical="@dimen/search_patient_cardview_vertical_margin"
            android:layout_marginTop="@dimen/search_patient_cardview_margin_top"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible"
            app:cardBackgroundColor="@color/primary_blue_40"
            app:cardCornerRadius="@dimen/cardView_radius_corner">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_height"
                    android:contentDescription="Task Image"
                    android:scaleType="centerInside"
                    android:src="@drawable/clipboard"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/new_patient_horizontal_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Case Management"
                    android:textAppearance="?textAppearanceTitleLarge"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dashboard_text_fontSize" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_crud"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/search_patient_cardview_horizontal_margin"
            android:layout_marginVertical="@dimen/search_patient_cardview_vertical_margin"
            android:layout_marginTop="@dimen/search_patient_cardview_margin_top"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/primary_blue_40"
            app:cardCornerRadius="@dimen/cardView_radius_corner">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_height"
                    android:contentDescription="Task Image"
                    android:src="@drawable/people"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/new_patient_horizontal_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="RCCE Tools"
                    android:textAppearance="?textAppearanceTitleLarge"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dashboard_text_fontSize" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_assessments"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/search_patient_cardview_horizontal_margin"
            android:layout_marginVertical="@dimen/search_patient_cardview_vertical_margin"
            android:layout_marginTop="@dimen/search_patient_cardview_margin_top"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible"
            app:cardBackgroundColor="@color/primary_blue_40"
            app:cardCornerRadius="@dimen/cardView_radius_corner">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_height"
                    android:contentDescription="Task Image"
                    android:scaleType="centerInside"
                    android:src="@drawable/presentation"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/new_patient_horizontal_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Assessments/Surveys"
                    android:textAppearance="?textAppearanceTitleLarge"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dashboard_text_fontSize" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
